<div class="col-sm-10 col-sm-offset-1 padding">
  <div class="image col-sm-6">
    <%= image_tag @book.picture.url, class:"td-image" %>
  </div>
  <div class="content col-sm-6">
    <h2 class="text-center"><%= @book.title %></h2>
    <hr>
    <i class="text-center"><%= @book.author %></i>
    <hr>
    <h4><%= @book.description %></h4>
    <hr>
    <span class="text-center"><%= @book.publish_time %></span>
    <span class="text-center"><%= @book.pages %> pages</span>
  </div>
  <div class="clearfix"></div>
</div>
